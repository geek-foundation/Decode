<section class="signup-body">
	            <div class="signup flex">
				<div class="signup-form form-card">
				<h3>Sign Up</h3>
				<form class="form">
					<div class="form-item">
						<input
							type="text"
							id="name"
							name="name"
							placeholder="Full Name (Required)"
							required
						/>
					</div>
					<div class="form-item">
						<input
							type="text"
							id="company"
							name="company"
							placeholder="Company Name (Optional)"
						/>
					</div>
					<div class="form-item">
						<input
							type="email"
							id="email"
							name="email"
							placeholder="Email (Required)"
							required
						/>
					</div>
					<div class="form-item">
						<input
							type="password"
							id="password"
							name="password"
							placeholder="Password (Required)"
							required
						/>
					</div>
					<button type="submit" class="btn btn-primary">Sign Up</button>
				</form>
			</div>
		</div>
	</div>
	</div>
</section>