<header>{{> loggedInHeader}}</header>

<section>
	<br />
	<div class="title text-center" id="title">{{title}}</div>

	<form action="/users/projects/new" method="POST">
		<div class="form-group">
			<label for="ProjectTitle">Title:</label>
			<input
				type="text"
				class="form-control"
				id="ProjectTitle"
				placeholder="eg:- Example Project"
			/>
		</div>
		<div class="form-group">
			<label for="category">Category:</label>
			<input
				type="text"
				class="form-control"
				id="category"
				placeholder="eg:- Web,Android"
			/>
		</div>
		<div class="form-group">
			<label for="primaryLanguage">Primary Language(s):</label>
			<input
				type="text"
				class="form-control"
				id="primaryLanguage"
				placeholder="eg:- Java,Python"
			/>
		</div>
		<div class="form-group">
			<label for="ProjectTitle">Category:</label>
			<input
				type="text"
				class="form-control"
				id="category"
				placeholder="eg:- Web,Android"
			/>
		</div>
		<div class="form-group">
			<label for="status">Project Status:</label>
			<select id="status" class="form-control">
				<option selected>Not Started</option>
				<option>In Progress</option>
				<option>Completed</option>
			</select>
		</div>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="startDate">Start Date:</label>
				<input
					type="text"
					class="form-control"
					id="startDate"
					placeholder="dd/mm/yyyy"
				/>
			</div>
			<div class="form-group col-md-6">
				<label for="endDate">End Date:</label>
				<input
					type="text"
					class="form-control"
					id="endDate"
					placeholder="eg:- dd/mm/yyyy, present"
				/>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Start Project</button>
	</form>
</section>
